<Window x:Class="Waher.Client.WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="416">
    <DockPanel xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" DockPanel.Dock="Top" Height="230">
            <TabItem Header="Control">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <CheckBox Name="Form_Lamp" Content="Lamp switch on." Margin="0,5,0,0" Background="LightGray"
                                  ToolTip="If checked, lamp is turned on." IsChecked="True" />
                        <TextBox Background="PeachPuff"/>
                        <DockPanel Width="290">
                            <Button Width="50" Height="23" Margin="0,0,5,0">&lt;&lt;</Button>
                            <Button Width="50" Height="23" Margin="5,0,5,0">Play</Button>
                            <Button Width="50" Height="23" Margin="5,0,5,0">Pause</Button>
                            <Button Width="50" Height="23" Margin="5,0,5,0">Stop</Button>
                            <Button Width="50" Height="23" Margin="5,0,0,0">&gt;&gt;</Button>
                        </DockPanel>
                        <ComboBox IsEditable="True" Text="Hej">
                            <ComboBoxItem>Option 1</ComboBoxItem>
                            <ComboBoxItem>Option 2</ComboBoxItem>
                            <ComboBoxItem>Option 3</ComboBoxItem>
                            <ComboBoxItem>Option 4</ComboBoxItem>
                        </ComboBox>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Column="0" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock FontWeight="Bold">First Name</TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock FontWeight="Bold">Last Name</TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock FontWeight="Bold">JID</TextBlock>
                            </Border>
                            <Border Grid.Column="0" Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#10808080">
                                <TextBlock>George</TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#10808080">
                                <TextBlock>Washington</TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#10808080">
                                <TextBlock>george.washington@example.com</TextBlock>
                            </Border>
                            <Border Grid.Column="0" Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock>John</TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock>Adams</TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock>john.adams@example.com</TextBlock>
                            </Border>
                            <Border Grid.Column="0" Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#10808080">
                                <TextBlock>Thomas</TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#10808080">
                                <TextBlock>Jefferson</TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#10808080">
                                <TextBlock>thomas.jefferson@example.com</TextBlock>
                            </Border>
                            <Border Grid.Column="0" Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock>James</TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock>Madison</TextBlock>
                            </Border>
                            <Border Grid.Column="2" Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Padding="5,0,5,0" Background="#20404040">
                                <TextBlock>james.madison@example.com</TextBlock>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <DockPanel Width="160" Height="30" DockPanel.Dock="Bottom">
            <Button Content="Connect" Height="23" HorizontalAlignment="Left" Name="ConnectButton" VerticalAlignment="Center" Width="75"  
                    ToolTip="Connect to the server using the information provided above. If connection is successful, the dialog closes, and the corresponding connection is established." IsDefault="True" />
            <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Name="CancelButton" Margin="10,0,0,0" VerticalAlignment="Center" Width="75" 
                    ToolTip="Closes the dialog without creating a new connection." IsCancel="True"/>
        </DockPanel>
    </DockPanel>
</Window>
